{{#with bod}}
    <div class="uk-container right" id="ipBox">
    <img class="uk-comment-avatar right" src={{this.country_flag}} width="150" height="150" alt="">
                    <div class="uk-width-expand top-right">
                      
                        <h5 class="uk-comment-title uk-margin-remove">{{this.region}}</h5>
